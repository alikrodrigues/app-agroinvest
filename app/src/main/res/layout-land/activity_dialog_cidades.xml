<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context="br.net.agroinvestapp.view.dialog.Dialog_cidadesActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fundo_telas"
            android:fillViewport="true">

<android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Switch
            android:text="Jaragua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/jaraguasw"
            android:textColor="@android:color/black"
            android:theme="@style/MySwitch"
            android:textSize="@dimen/text_medium"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/canoinhassw" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline13"/>
    <Switch
            android:text="Joaçaba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joacabasw" android:textColor="@android:color/black"
            android:theme="@style/MySwitch"
            android:textSize="@dimen/text_medium"
            app:layout_constraintRight_toLeftOf="@+id/guideline13"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chapecosw"/>
    <Switch
            android:text="Rio do Sul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/riosw"
            android:textColor="@android:color/black"
            android:theme="@style/MySwitch"
            android:textSize="@dimen/text_medium"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline13" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/jaraguasw"/>
    <Switch
            android:text="Sul Catarinense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium"
            android:id="@+id/scsw" android:theme="@style/MySwitch"
            app:layout_constraintRight_toLeftOf="@+id/guideline13"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/joacabasw"/>
    <Switch
            android:text="São Miguel O"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/smosw"
            android:theme="@style/MySwitch"
            android:textSize="@dimen/text_medium"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline13" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/riosw"/>
    <Button
            android:text="Ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOk"
            android:theme="@style/botaoPadrao"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/scsw"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline13"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5" tools:layout_editor_absoluteY="0dp"
                                          tools:layout_editor_absoluteX="296dp"/>
    <Switch
            android:text="Lages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lagesSw" android:textColor="@android:color/black"
            android:theme="@style/MySwitch"
            android:textSize="@dimen/text_medium"
            app:layout_constraintRight_toLeftOf="@+id/guideline13"
            android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <Switch
            android:text="Canoinhas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/canoinhassw"
            android:textSize="@dimen/text_medium"
            android:textColor="@android:color/black"
            android:theme="@style/MySwitch"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline13" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
    <Switch
            android:text="Chapecó"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chapecosw" android:textColor="@android:color/black"
            android:theme="@style/MySwitch"
            android:textSize="@dimen/text_medium"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lagesSw" app:layout_constraintRight_toLeftOf="@+id/guideline13"
            android:layout_marginRight="8dp"/>


</android.support.constraint.ConstraintLayout>
</ScrollView>