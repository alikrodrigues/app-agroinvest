<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context="br.net.agroinvestapp.view.OrcamentoActivity"
            android:background="@drawable/fundo_telas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp">

    <Button
            android:text="Editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFinalizar"
            android:theme="@style/botaoPadrao"
            android:onClick="actionFinalizar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaveSend"
            android:theme="@style/botaoPadrao"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintLeft_toRightOf="@+id/btnFinalizar"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>


    <TextView
            android:text="Preço não divulgado pela EPAGRI"
            android:layout_width="wrap_content"
            android:textColor="@color/warningInsumo"
            android:layout_height="0dp"
            android:id="@+id/legenda"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/btnSaveSend" android:layout_alignBottom="@+id/btnSaveSend"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/v1" app:layout_constraintRight_toLeftOf="@+id/guideline14"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/c1" android:textSize="10sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/v2"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline14" app:layout_constraintRight_toLeftOf="@+id/guideline15"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBaseline_toBaselineOf="@+id/v1"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/v4"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintRight_toLeftOf="@+id/guideline17"
            app:layout_constraintLeft_toLeftOf="@+id/guideline18"
            app:layout_constraintBaseline_toBaselineOf="@+id/v3" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/v5"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline17" app:layout_constraintRight_toLeftOf="@+id/guideline16"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBaseline_toBaselineOf="@+id/v4"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/v6"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            app:layout_constraintRight_toLeftOf="@+id/guideline20"
            app:layout_constraintLeft_toLeftOf="@+id/guideline16"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBaseline_toBaselineOf="@+id/v5"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:id="@+id/v7"
            android:textSize="10sp"
            app:layout_constraintRight_toLeftOf="@+id/guideline21"
            app:layout_constraintLeft_toLeftOf="@+id/guideline20"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBaseline_toBaselineOf="@+id/v6"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/v8"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guideline21"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBaseline_toBaselineOf="@+id/v7"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/v3"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline15" app:layout_constraintRight_toLeftOf="@+id/guideline18"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBaseline_toBaselineOf="@+id/v2"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/c1"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            app:layout_constraintRight_toLeftOf="@+id/guideline14" app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="14sp" app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnFinalizar"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/c2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="@+id/guideline14" app:layout_constraintRight_toLeftOf="@+id/guideline15"
            app:layout_constraintBaseline_toBaselineOf="@+id/c1" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/c3"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintRight_toLeftOf="@+id/guideline18"
            app:layout_constraintLeft_toLeftOf="@+id/guideline15"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBaseline_toBaselineOf="@+id/c2"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/c7"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintRight_toLeftOf="@+id/guideline21"
            app:layout_constraintLeft_toLeftOf="@+id/guideline20"
            app:layout_constraintBaseline_toBaselineOf="@+id/c6" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/c6"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintRight_toLeftOf="@+id/guideline20"
            app:layout_constraintLeft_toLeftOf="@+id/guideline16"
            app:layout_constraintBaseline_toBaselineOf="@+id/c5" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/c5"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline17" app:layout_constraintRight_toLeftOf="@+id/guideline16"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBaseline_toBaselineOf="@+id/c4"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/c4"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="@+id/guideline18"
            app:layout_constraintRight_toLeftOf="@+id/guideline17"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBaseline_toBaselineOf="@+id/c3"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/c8"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guideline21"
            app:layout_constraintBaseline_toBaselineOf="@+id/c7" app:layout_constraintHorizontal_bias="0.0"/>

    <ListView
            android:layout_width="0dp"
            android:divider="@android:color/black"
            android:dividerHeight="1dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:id="@+id/listOrca"
            app:layout_constraintTop_toBottomOf="@+id/v1" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp" android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="0dp" app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline14"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.12" tools:layout_editor_absoluteY="25dp"
                                          tools:layout_editor_absoluteX="71dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline15"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.25" tools:layout_editor_absoluteY="25dp"
                                          tools:layout_editor_absoluteX="148dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline16"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.62" tools:layout_editor_absoluteY="25dp"
                                          tools:layout_editor_absoluteX="367dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline17"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5" tools:layout_editor_absoluteY="25dp"
                                          tools:layout_editor_absoluteX="296dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline18"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.37" tools:layout_editor_absoluteY="25dp"
                                          tools:layout_editor_absoluteX="219dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline20"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.75" tools:layout_editor_absoluteY="25dp"
                                          tools:layout_editor_absoluteX="444dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline21"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.87" tools:layout_editor_absoluteY="25dp"
                                          tools:layout_editor_absoluteX="515dp"/>
    <TextView
            android:text="@string/legenda_laranja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/legendaLaranj"
            android:textSize="@dimen/text_medium" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/legenda"/>

</android.support.constraint.ConstraintLayout>

</ScrollView>