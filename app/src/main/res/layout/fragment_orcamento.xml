<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="br.net.agroinvestapp.view.fragment.OrcamentoFragment"
             android:id="@+id/frag_orca">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#AED581">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_below="@+id/relativeLayout">

            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                    android:id="@+id/listViewOrcam"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:elevation="5dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:background="@android:color/background_light"
                android:id="@+id/relativeLayout">

            <TextView
                    android:text="info"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/txtInfo" android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imgWarning" android:layout_toEndOf="@+id/imgWarning"
                    android:layout_alignBottom="@+id/imgWarning"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_action_warning"
                    android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:id="@+id/imgWarning"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:editable="false"
                    android:textColor="@android:color/black"
                    android:ems="10"
                    android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:id="@+id/edtColunasPrecos"
                    android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
